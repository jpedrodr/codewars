<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" />

    <style name="Theme.Challenge" />

    <style name="Theme.Toolbar">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>

    <style name="Theme.Challenge.List">
        <item name="android:layout_marginHorizontal">@dimen/challenge_list_horizontal_margin</item>
        <item name="android:layout_marginVertical">@dimen/challenge_list_vertical_margin</item>
    </style>

    <style name="Theme.Challenge.Card">
        <item name="android:layout_marginHorizontal">@dimen/challenge_item_card_horizontal_margin
        </item>
        <item name="android:layout_marginVertical">@dimen/challenge_item_card_vertical_margin</item>
        <item name="cardElevation">@dimen/challenge_item_card_elevation</item>
    </style>

    <style name="Theme.Challenge.Item">
        <item name="android:paddingVertical">@dimen/challenge_item_vertical_padding</item>
        <item name="android:paddingHorizontal">@dimen/challenge_item_horizontal_padding</item>
    </style>

    <style name="Theme.Challenge.Container">
        <item name="android:paddingVertical">@dimen/challenge_item_container_vertical_padding</item>
    </style>

    <style name="Theme.Challenge.Text" />

    <style name="Theme.Challenge.Text.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Challenge.Text.Value">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:fontWeight">100</item>
        <item name="android:textColor">@color/text_secondary_color</item>
    </style>


</resources>