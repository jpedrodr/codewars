<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/challenge_item_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.Challenge.Item.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/Theme.Challenge.Item.MainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/challenge_item_name_tv_label"
            style="@style/Theme.Challenge.Text.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/challenge_item_name_tv"
            style="@style/Theme.Challenge.Text.Value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/challenge_item_name_tv_label"
            app:layout_constraintTop_toTopOf="@id/challenge_item_name_tv_label"
            tools:text="Multiples of 3 and 5" />


        <TextView
            android:id="@+id/challenge_item_slug_label"
            style="@style/Theme.Challenge.Text.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_slug"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/challenge_item_name_tv_label">

        </TextView>

        <TextView
            android:id="@+id/challenge_item_slug_tv"
            style="@style/Theme.Challenge.Text.Value"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/challenge_item_slug_label"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/challenge_item_slug_label"
            tools:text="multiples-of-3-and-5" />


        <TextView
            android:id="@+id/challenge_item_completed_at_label"
            style="@style/Theme.Challenge.Text.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_completed_at"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/challenge_item_slug_label" />

        <TextView
            android:id="@+id/challenge_item_completed_at_tv"
            style="@style/Theme.Challenge.Text.Value"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/challenge_item_completed_at_label"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/challenge_item_completed_at_label"
            tools:text="2017-04-06" />


        <TextView
            android:id="@+id/challenge_item_completed_languages_label"
            style="@style/Theme.Challenge.Text.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_completed_languages"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/challenge_item_completed_at_label" />

        <TextView
            android:id="@+id/challenge_item_completed_language_tv"
            style="@style/Theme.Challenge.Text.Value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/challenge_item_completed_languages_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/challenge_item_completed_languages_label"
            tools:text="11" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>